<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.proyectoindividual.modulo_clientes.MenuClientes" android:background="@color/colorTextoBotones">

    <Button
            android:text="BUSCAR"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_ver_cli"
            app:layout_constraintEnd_toEndOf="@+id/btn_ing_cli" android:layout_marginEnd="128dp"
            app:layout_constraintStart_toStartOf="@+id/btn_ing_cli" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/btn_ing_cli"/>
    <Button
            android:text="ACTUALIZAR O ELIMINAR"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_mod_cli"
            app:layout_constraintStart_toStartOf="@+id/btn_ver_cli"
            app:layout_constraintEnd_toEndOf="@+id/btn_ver_cli" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/btn_ver_cli"/>
    <Button
            android:text="@string/insertar"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_ing_cli"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="256dp" app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>