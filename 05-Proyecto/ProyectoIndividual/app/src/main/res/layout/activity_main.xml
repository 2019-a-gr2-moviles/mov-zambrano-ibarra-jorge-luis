<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.proyectoindividual.MainActivity" android:background="@color/colorTextoBotones">

    <Button
            android:text="Canchas"
            android:layout_width="155dp"
            android:layout_height="51dp"
            android:id="@+id/btn_cancha"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_clientes"
            app:layout_constraintStart_toStartOf="@+id/btn_clientes"
            app:layout_constraintEnd_toEndOf="@+id/btn_clientes"/>
    <Button
            android:text="Reserva"
            android:layout_width="155dp"
            android:layout_height="51dp"
            android:id="@+id/btn_reservas" app:layout_constraintStart_toStartOf="@+id/btn_cancha"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_cancha"/>
    <Button
            android:text="@string/txt_cliente"
            android:layout_width="155dp"
            android:layout_height="51dp"
            android:id="@+id/btn_clientes"
            android:layout_marginBottom="456dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>