<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Recycler View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rv"
            android:layout_marginBottom="448dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.573" app:layout_constraintVertical_bias="0.48"/>
    <Button
            android:text="Respuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRespuesta" app:layout_constraintStart_toStartOf="@+id/btn_rv"
            app:layout_constraintEnd_toEndOf="@+id/btn_rv" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_rv" app:layout_constraintHorizontal_bias="0.538"/>
    <Button
            android:text="HTTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHttp" app:layout_constraintStart_toStartOf="@+id/btnRespuesta"
            app:layout_constraintEnd_toEndOf="@+id/btnRespuesta"
            app:layout_constraintTop_toBottomOf="@+id/btnRespuesta" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMap" app:layout_constraintStart_toStartOf="@+id/btnHttp"
            app:layout_constraintEnd_toEndOf="@+id/btnHttp" app:layout_constraintTop_toBottomOf="@+id/btnHttp"/>
    <Button
            android:text="Ciclo de Vida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCicloVida" app:layout_constraintStart_toStartOf="@+id/btnMap"
            app:layout_constraintEnd_toEndOf="@+id/btnMap" app:layout_constraintTop_toBottomOf="@+id/btnMap"
            app:layout_constraintHorizontal_bias="0.451" android:layout_marginTop="8dp"/>
    <Button
            android:text="Fragmentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFragmentos" app:layout_constraintStart_toStartOf="@+id/btnCicloVida"
            app:layout_constraintEnd_toEndOf="@+id/btnCicloVida" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCicloVida" app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>