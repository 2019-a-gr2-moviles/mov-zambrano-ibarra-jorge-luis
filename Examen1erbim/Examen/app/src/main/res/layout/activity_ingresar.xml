<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLiga" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="@+id/txtNombre" android:layout_marginStart="3dp"
            android:hint="Liga" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            app:layout_constraintStart_toStartOf="@+id/checkBox"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="@+id/checkBox" app:layout_constraintEnd_toEndOf="@+id/checkBox"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            app:layout_constraintStart_toStartOf="@+id/btnAceptar"
            app:layout_constraintEnd_toEndOf="@+id/btnAceptar" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAceptar"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumCopInter"
            android:hint="NÃºmero de Copas Internacionales"
            app:layout_constraintStart_toStartOf="@+id/dateFechCreac" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="@+id/dateFechCreac"
            app:layout_constraintEnd_toEndOf="@+id/dateFechCreac"/>
    <CheckBox
            android:text="Campeon Actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" app:layout_constraintStart_toStartOf="@+id/txtNumCopInter"
            app:layout_constraintEnd_toEndOf="@+id/txtNumCopInter"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/dateFechCreac"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dateFechCreac"
            app:layout_constraintStart_toStartOf="@+id/txtLiga" app:layout_constraintEnd_toEndOf="@+id/txtLiga"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintHorizontal_bias="1.0" android:hint="Fecha Creacion"/>
</android.support.constraint.ConstraintLayout>